<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#03A9F4">

        <ImageView
            android:id="@+id/image_view_original_country"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/france"/>

        <TextView
            android:id="@+id/text_view_original_country_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="40sp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="5dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/text_view_original_country_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIETNAM"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_view_original_country_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is description"
                android:textSize="14sp"
                android:textStyle="italic"/>

        </LinearLayout>

        <Button
            android:id="@+id/button_original_country_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Update"
            android:textSize="12sp"
            android:background="#FFEB3B"
            android:minHeight="3dp"
            android:minWidth="4dp"
            android:layout_gravity="center"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>